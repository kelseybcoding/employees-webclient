<h1>Update Employee</h1>

<%= form_tag "/employees/#{@id}", method: :post do %>
  <div>
    <%= label_tag :first_name %>
    <%= text_field_tag :first_name %>
  </div>
  <div>
    <%= label_tag :last_name %>
    <%= text_field_tag :last_name %>
  </div>
  <div>
    <%= label_tag :ssn %>
    <%= text_field_tag :ssn %>
  </div>
  <div>
    <%= label_tag :email %>
    <%= text_field_tag :email %>
  </div>

  <%= submit_tag "Push it" %>
<% end %>